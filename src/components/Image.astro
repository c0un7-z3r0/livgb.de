---
import { Img } from "astro-imagetools/components";
import type { ImageFragment } from "../graphql/__generated__/operations";

interface Props {
  data: ImageFragment;
}

const { data } = Astro.props;
---

<Img
  src={`${import.meta.env.STRAPI_URL}${data.File.data.attributes.url}`}
  alt={data.File.data.attributes.url}
  layout="fullWidth"
  format="webp"
/>
