---
import { Img } from "astro-imagetools/components";
import { logger } from "../lib/logger";
const { src, alt = "" } = Astro.props;
logger.info("Render image", { src, alt });
---

<Img
  attributes={{ class: "mosaic-image" }}
  alt={alt}
  src={src}
  format="webp"
  layout="fullWidth"
/>
<style is:inline>
  img {
    color: transparent;
  }
</style>
